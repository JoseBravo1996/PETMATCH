<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE082">

    <!-- Fondo decorativo con huellas -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_paw"
        android:alpha="0.10"
        android:layout_gravity="top|start"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_paw"
        android:alpha="0.08"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:text="Agregar mascota"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#D35400"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Card central -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#FFF"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp">

                <!-- Imagen circular -->
                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/btn_circle_white"
                        android:clipToOutline="true" />
                    <ImageButton
                        android:id="@+id/btnSelectImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:background="@drawable/btn_circle_white"
                        android:layout_gravity="center" />
                </FrameLayout>

                <EditText
                    android:id="@+id/etName"
                    android:hint="Name"
                    android:background="@drawable/rounded_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:textColor="#222"
                    android:textColorHint="#888"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/etDescription"
                    android:hint="Breed"
                    android:background="@drawable/rounded_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:textColor="#222"
                    android:textColorHint="#888"
                    android:layout_marginTop="12dp" />

                <!-- ChipGroup para tags -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:singleSelection="false"
                    app:chipSpacing="8dp" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location_not_set"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnSelectLocation"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Elegir ubicación"
                    android:background="@drawable/rounded_yellow_button"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <!-- Edad -->
                <EditText
                    android:id="@+id/etAge"
                    android:hint="Edad (años)"
                    android:inputType="number"
                    android:background="@drawable/rounded_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:textColor="#222"
                    android:textColorHint="#888"
                    android:layout_marginTop="12dp" />

                <!-- Tipo de animal -->
                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input" />

                <!-- Sexo -->
                <Spinner
                    android:id="@+id/spinnerSex"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_input" />

                <!-- ¿Es de raza? -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:text="¿Es de raza?"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#222"
                        android:textSize="16sp" />
                    <Switch
                        android:id="@+id/switchBreed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- ¿Vacunado? -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:text="¿Vacunado?"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#222"
                        android:textSize="16sp" />
                    <Switch
                        android:id="@+id/switchVaccinated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- ¿Esterilizado? -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:text="¿Esterilizado?"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#222"
                        android:textSize="16sp" />
                    <Switch
                        android:id="@+id/switchSterilized"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSubmitPet"
                    android:text="Guardar mascota"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_yellow_button"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>