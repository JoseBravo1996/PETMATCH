<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="28dp"
    card_view:cardElevation="10dp"
    android:layout_margin="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <!-- Imagen de la mascota -->
        <ImageView
            android:id="@+id/ivPet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <!-- Gradiente superior para mejor legibilidad del texto -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/top_gradient" />

        <!-- Nombre, edad y chips -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/tvName"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#FFF"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/chipNewProfile"
                    android:text="Perfil nuevo"
                    android:textColor="#222"
                    android:textSize="13sp"
                    android:background="@drawable/chip_white"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/chipDistance"
                    android:text="A ~20 km de ti"
                    android:textColor="#FFF"
                    android:textSize="13sp"
                    android:background="@drawable/chip_dark"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Botones tipo Tinder -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnDislike"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_circle_white"
                android:src="@android:drawable/ic_delete"
                android:tint="#222"
                android:contentDescription="Dislike"/>

            <Space
                android:layout_width="48dp"
                android:layout_height="1dp"/>

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_circle_white"
                android:src="@android:drawable/btn_star_big_on"
                android:tint="#F15A4A"
                android:contentDescription="Like"/>
        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>